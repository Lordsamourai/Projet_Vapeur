<h1>Modifier le jeu : {{jeu.titre}}</h1>
<form action="/jeux/{{jeu.id}}/edit" method="POST">
  <label for="titre">Titre :</label>
  <input
    type="text"
    name="titre"
    id="titre"
    value="{{jeu.titre}}"
    required
  />

  <label for="description">Description :</label>
  <textarea name="description" id="description" required>{{jeu.description}}</textarea>

  <label for="dateSortie">Date de sortie :</label>
  <input
    type="date"
    name="dateSortie"
    id="dateSortie"
    value="{{jeu.dateSortie}}"
    required
  />

  <label for="genreId">Genre :</label>
  <select name="genreId" id="genreId">
    {{#each genres}}
    <option
      value="{{this.id}}"
      {{#if (eq this.id ../jeu.genreId)}}selected{{/if}}
    >
      {{this.nom}}
    </option>
    {{/each}}
  </select>

  <label for="editeurId">Éditeur :</label>
  <select name="editeurId" id="editeurId">
    {{#each editeurs}}
    <option
      value="{{this.id}}"
      {{#if (eq this.id ../jeu.editeurId)}}selected{{/if}}
    >
      {{this.nom}}
    </option>
    {{/each}}
  </select>

  <label for="misEnAvant">Mis en avant :</label>
  <input
    type="checkbox"
    name="misEnAvant"
    id="misEnAvant"
    {{#if jeu.misEnAvant}}checked{{/if}}
  />

  <button type="submit">Enregistrer</button>
</form>

<a href="/jeux" class="btn">Retourner à la liste de jeux</a>
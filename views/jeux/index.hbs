<h1>Liste des Jeux</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Date de sortie</th>
      <th>Genre</th>
      <th>Éditeur</th>
      <th>Mis en avant</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each jeux}}
    <tr>
      <td>{{this.titre}}</td>
      <td>{{this.description}}</td>
      <td>{{this.dateSortie}}</td>
      <td>{{this.genre.nom}}</td>
      <td>{{this.editeur.nom}}</td>
      <td>{{#if this.misEnAvant}}✅{{else}}❌{{/if}}</td>
      <td>
        <!-- Bouton Modifier -->
        <a href="/jeux/{{this.id}}/edit" class="btn btn-primary">Modifier</a>

        <!-- Bouton Supprimer -->
        <form
          action="/jeux/{{this.id}}/delete"
          method="POST"
          style="display:inline;"
        >
          <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<a href="/jeux/new" class="btn btn-success">Créer un nouveau jeu</a>
<a href="/" class="btn">Retourner à l'accueil</a>
